<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gray"
    tools:context=".SocialNetwork">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/drustvene_mreze"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBarLayout"
            android:paddingTop="65dp"
            android:src="@drawable/pratite_nas"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Pratite nas!"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/myImageView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:src="@drawable/facebook_button"
            android:clickable="true"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="71dp" />

        <ImageView
            android:id="@+id/myImageView3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/linkedin_button"
            android:clickable="true"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="71dp" />

        <ImageView
            android:id="@+id/myImageView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/twitter_button"
            android:clickable="true"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="71dp" />

        <ImageView
            android:id="@+id/myImageView5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/youtube_button"
            android:clickable="true"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="71dp" />


    </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>